// Conteúdo de prisma/schema.prisma (Modelos simplificados)

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Responsavel {
  id          Int       @id @default(autoincrement())
  nome        String
  cpf         String    @unique
  email       String?   @unique
  // id do endereço principal
  enderecoId  Int

  alunos      Aluno[]
  pagamentos  Pagamento[]
  
  @@map("responsavel")
}

model Pagamento {
  id              Int       @id @default(autoincrement())
  responsavelId   Int
  valor           Decimal   @db.Decimal(10, 2)
  dataVencimento  DateTime  @db.Date
  status          String    @default("Pendente")

  responsavel     Responsavel @relation(fields: [responsavelId], references: [id])
  
  @@map("pagamento")
}
